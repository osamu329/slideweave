{
  "type": "deck",
  "format": "wide",
  "slides": [
    {
      "type": "slide",
      "children": [
        {
          "type": "container",
          "style": {
            "flexDirection": "row",
            "width": "100%",
            "height": "100%",
            "padding": "40px",
            "gap": "20px",
            "alignItems": "stretch"
          },
          "children": [
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#E3F2FD",
                "padding": "20px",
                "minWidth": "200px",
                "maxWidth": "300px",
                "flex": 1
              },
              "children": [
                {
                  "type": "text",
                  "content": "Min/Max Width Test",
                  "style": {
                    "fontSize": "18pt",
                    "color": "#1976D2",
                    "marginBottom": "10px"
                  }
                },
                {
                  "type": "text",
                  "content": "minWidth: 200px\nmaxWidth: 300px\n\nThis box will be at least 200px wide and at most 300px wide.",
                  "style": {
                    "fontSize": "14pt",
                    "color": "#424242"
                  }
                }
              ]
            },
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#E8F5E9",
                "padding": "20px",
                "width": "150px"
              },
              "children": [
                {
                  "type": "text",
                  "content": "Fixed Width",
                  "style": {
                    "fontSize": "18pt",
                    "color": "#2E7D32",
                    "marginBottom": "10px"
                  }
                },
                {
                  "type": "text",
                  "content": "width: 150px\n\nThis box has a fixed width for comparison.",
                  "style": {
                    "fontSize": "14pt",
                    "color": "#424242"
                  }
                }
              ]
            },
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#FFF3E0",
                "padding": "20px",
                "minWidth": "100px",
                "flex": 2
              },
              "children": [
                {
                  "type": "text",
                  "content": "Min Width Only",
                  "style": {
                    "fontSize": "18pt",
                    "color": "#E65100",
                    "marginBottom": "10px"
                  }
                },
                {
                  "type": "text",
                  "content": "minWidth: 100px\nflex: 2\n\nThis box has minimum width constraint but can grow with flex.",
                  "style": {
                    "fontSize": "14pt",
                    "color": "#424242"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "slide",
      "children": [
        {
          "type": "container",
          "style": {
            "flexDirection": "column",
            "width": "100%",
            "height": "100%",
            "padding": "40px",
            "gap": "20px",
            "alignItems": "center"
          },
          "children": [
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#F3E5F5",
                "padding": "30px",
                "minHeight": "100px",
                "maxHeight": "200px",
                "width": "80%"
              },
              "children": [
                {
                  "type": "text",
                  "content": "Min/Max Height Test",
                  "style": {
                    "fontSize": "20pt",
                    "color": "#7B1FA2",
                    "marginBottom": "10px"
                  }
                },
                {
                  "type": "text",
                  "content": "minHeight: 100px, maxHeight: 200px\n\nThis box has both minimum and maximum height constraints. It will be at least 100px tall but no more than 200px.",
                  "style": {
                    "fontSize": "16pt",
                    "color": "#4A148C"
                  }
                }
              ]
            },
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#E0F2F1",
                "padding": "30px",
                "minHeight": "150px",
                "maxHeight": "250px",
                "width": "80%"
              },
              "children": [
                {
                  "type": "text",
                  "content": "Pixel Height Constraints",
                  "style": {
                    "fontSize": "20pt",
                    "color": "#00695C",
                    "marginBottom": "10px"
                  }
                },
                {
                  "type": "text",
                  "content": "minHeight: 150px, maxHeight: 250px\n\nThis box uses pixel units for height constraints.",
                  "style": {
                    "fontSize": "16pt",
                    "color": "#004D40"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "slide",
      "children": [
        {
          "type": "container",
          "style": {
            "flexDirection": "row",
            "width": "100%",
            "height": "100%",
            "padding": "40px",
            "gap": "20px",
            "alignItems": "center",
            "justifyContent": "center"
          },
          "children": [
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#FCE4EC",
                "padding": "40px",
                "minWidth": "20%",
                "maxWidth": "30%",
                "minHeight": "200px",
                "maxHeight": "400px"
              },
              "children": [
                {
                  "type": "text",
                  "content": "Percentage Constraints",
                  "style": {
                    "fontSize": "18pt",
                    "color": "#C2185B",
                    "marginBottom": "15px"
                  }
                },
                {
                  "type": "text",
                  "content": "minWidth: 20%\nmaxWidth: 30%\nminHeight: 200px\nmaxHeight: 400px\n\nCombining percentage and pixel constraints.",
                  "style": {
                    "fontSize": "14pt",
                    "color": "#880E4F"
                  }
                }
              ]
            },
            {
              "type": "frame",
              "style": {
                "backgroundColor": "#E8EAF6",
                "padding": "40px",
                "minWidth": "150px",
                "maxWidth": "400px",
                "minHeight": "100px",
                "maxHeight": "300px"
              },
              "children": [
                {
                  "type": "text",
                  "content": "Pixel Units Only",
                  "style": {
                    "fontSize": "18pt",
                    "color": "#303F9F",
                    "marginBottom": "15px"
                  }
                },
                {
                  "type": "text",
                  "content": "minWidth: 150px\nmaxWidth: 400px\nminHeight: 100px\nmaxHeight: 300px\n\nUsing pixel units for all constraints.",
                  "style": {
                    "fontSize": "14pt",
                    "color": "#1A237E"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}