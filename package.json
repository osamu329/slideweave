{
  "name": "slideweave",
  "version": "0.1.0",
  "description": "PowerPoint slide creation tool",
  "type": "module",
  "main": "index.js",
  "bin": {
    "slideweave": "./bin/slideweave.js"
  },
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc && chmod +x bin/slideweave.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:examples": "npx tsx examples/runAllTests.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{js,ts}'"
  },
  "keywords": [
    "powerpoint",
    "slides",
    "presentation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "postcss": "^8.5.6",
    "postcss-value-parser": "^4.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "ora": "^8.2.0",
    "pptxgenjs": "^4.0.1",
    "sharp": "^0.34.2",
    "yoga-layout": "^3.2.1"
  }
}
